<div class=" col-sm-10 col-lg-8 offset-sm-1 offset-lg-2" >
  
  <h3 class="uppercase"><%= @status %></h3>
  <br/><br/>

  <%= simple_form_for @model do |f| %>
    <%= f.input :price %>
    <%= f.input :closing_costs %>
    <%= f.input :repair_costs %>
    <%= f.input :after_repair_value %>
    <%= f.input :rent_monthly %>
    <%= f.input :property_upkeep_monthly %>
    <%= f.input :insurance_monthly %>
    <%= f.input :hoa_fees_monthly %>
    <%= f.input :utilities_monthly %>
    <br/>
    <%= f.submit "Next", class: 'btn btn-outline-primary' %>
    <br/><br/><br/>
  <% end %>
</div>